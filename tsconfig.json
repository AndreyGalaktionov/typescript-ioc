{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "rootDir": "./src",
        "outDir": "./release",
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "mapRoot": "release/lib"                
    },
    "exclude": [
        "node_modules",
        "typings",
        "release"
    ]
}